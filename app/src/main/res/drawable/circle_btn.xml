<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
    <corners
        android:radius="100dp"
        />
    <gradient
        android:angle="45"
        android:centerX="40%"
        android:centerColor="#47A891"
        android:startColor="#6FFF3B"
        android:endColor="#021124"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="100dp"
        android:height="100dp"
        />
    <stroke
        android:width="1dp"
        android:color="#061744"
        />

</shape>

